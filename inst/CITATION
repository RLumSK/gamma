citHeader("To cite gamma in publications use:")

citEntry(entry = "Manual",
  title        = "{gamma}: Dose Rate Estimation from In-Situ Gamma-Ray Spectrometry Measurements for Luminescence Dating",
  author       = c(person("Nicolas", "Frerebeau", role = c("aut", "cre")),
                   person("Brice", "Lebrun", role = "aut"),
                   person("Guillaume", "Guérin", role = "aut"),
                   person("Christelle", "Lahaye", role = "aut")),
  year         = "2019",
  organization = "Université Bordeaux Montaigne",
  address      = "Pessac, France",
  note         = paste("R package version", packageVersion("gamma")),
  url          = "https://doi.org/10.5281/zenodo.2652393",

  textVersion  =
  paste("Frerebeau, Nicolas, Brice Lebrun, Guillaume Guérin and Christelle Lahaye (2019).",
        "gamma: Dose Rate Estimation from In-Situ Gamma-Ray Spectrometry Measurements for Luminescence Dating.",
        "R package version", paste0(packageVersion("gamma"), "."),
        "Université Bordeaux Montaigne, Pessac, France.",
        "DOI 10.5281/zenodo.2652393.",
        "URL https://cran.r-project.org/package=gamma.")
)
